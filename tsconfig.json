{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS", 
    "resolveJsonModule": true,
    "sourceMap": true, 
    "outDir": "./dist", 
    "strict": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "src/",
    "esModuleInterop": true,
    "declaration": true,  
  },
  "include": [
    "src/**/*",
    "@types/**/*",
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}